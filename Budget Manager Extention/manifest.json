{
    "manifest_version" : 2,
    "name" : "Budget Manager",
    "description" : "Track your overall budget.",
    "version" : "0.1",
    "icons" : {
        "128" : "icon128.png",
        "48" : "icon48.png",
        "32" : "icon32.png",
        "16" : "icon16.png"
    },
    "browser_action" : {
        "default_icon" : "icon16.png",
        "default_popup" : "popup.html"
    },

    "options_page" : "options.html",

    "permissions" : [
        "storage",
        "notifications"
    ]
}